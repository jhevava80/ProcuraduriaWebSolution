@model WebApplicationSearch.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<div class="row">
    <div class="col-md-4 offset-1">
        <h4>Enter username and password.</h4>
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Username">Username</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="Rememberme" type="checkbox" class="form-check-input" />
                    <label asp-for="Rememberme">Remember me?</label>
                </div>
                <span asp-validation-for="Rememberme" class="text-warning"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> Login</button>
                <a asp-action="Register" class="btn btn-warning"><i class="fa fa-plus-circle"></i>  Register New User</a>
            </div>
        </form>
    </div>
    <div class="col-md-4 mr-auto ">
        <partial name="_AnotherServiceLogin" />
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
